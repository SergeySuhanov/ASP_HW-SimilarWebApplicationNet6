
@{
    ViewData["Title"] = "Index";
}

<h1>AddPost</h1>

<form asp-controller="Post" asp-action="Add" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="Title" class="form-control" id="Title" placeholder="Title for post" />
    </div>
    <div class="form-group">
        <label>ImageUrl</label>
        <input type="text" name="ImageUrl" class="form-control" id="ImageUrl" placeholder="ImageUrl for post" />
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" name="Content" id="Content" rows="10"></textarea>
    </div>
    <button class="btn btn-outline-primary w-25 mt-2">Add</button>
</form>

 